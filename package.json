{
    "name": "anime-nexa",
    "version": "0.0.3",
    "description": "backend repo of anime nexa",
    "main": "src/app.js",
    "engines": {
        "node": ">=8.9.0",
        "npm": ">=5.0.3"
    },
    "scripts": {
        "dev": "env-cmd -f ./.env.local gulp serve",
        "start:dev": "env-cmd -f ./.env.local node dist/src/app.js",
        "start:stage": "env-cmd -f ./.env.stage node dist/src/app.js",
        "start:prod": "env-cmd -f ./.env.producction node dist/src/app.js",
        "build": "gulp",
        "report-coverage": "coveralls < ./coverage/lcov.info",
        "prepare": "husky install",
        "lint": "eslint . --fix --max-warnings=0",
        "format": "prettier . --write",
        "scan": "node scanner.mjs",
        "publish-patch": "npm version patch && npm run scan",
        "publish-minor": "npm version patch && npm run scan",
        "publish-major": "npm version patch && npm run scan"
    },
    "dependencies": {
        "@babel/plugin-proposal-optional-chaining": "^7.21.0",
        "@babel/runtime": "^7.21.0",
        "bcrypt": "^5.1.1",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "env-cmd": "^10.1.0",
        "express": "^4.18.2",
        "express-mongo-sanitize": "^2.2.0",
        "express-useragent": "^1.0.15",
        "express-validation": "^4.1.0",
        "express-winston": "^4.2.0",
        "helmet": "^6.0.1",
        "hpp": "^0.2.3",
        "http-status": "^1.6.2",
        "joi": "^17.9.1",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^7.0.3",
        "morgan": "^1.10.0",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.1",
        "sonarqube-scanner": "^3.0.1",
        "validator": "^13.9.0",
        "winston": "^3.8.2",
        "xss-clean": "^0.1.1"
    },
    "devDependencies": {
        "@babel/core": "^7.21.4",
        "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
        "@babel/plugin-transform-runtime": "^7.21.4",
        "@babel/preset-env": "^7.21.4",
        "@babel/register": "^7.21.0",
        "babel-plugin-add-module-exports": "^1.0.4",
        "babel-preset-stage-2": "^6.24.1",
        "core-js": "^3.30.0",
        "coveralls": "^3.1.1",
        "del": "^6.1.1",
        "eslint": "^8.37.0",
        "eslint-config-prettier": "^8.8.0",
        "ghooks": "^2.0.4",
        "gulp": "^4.0.2",
        "gulp-babel": "^8.0.0",
        "gulp-concat": "^2.6.1",
        "gulp-load-plugins": "^2.0.8",
        "gulp-newer": "^1.4.0",
        "gulp-nodemon": "^2.5.0",
        "gulp-uglify": "^3.0.2",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.0",
        "prettier": "^2.8.7"
    },
    "author": "AnimeNexa",
    "lint-staged": {
        "*.js": "eslint --cache --fix"
    }
}
